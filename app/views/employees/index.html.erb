<div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-6">
          <h1>Employees</h1>
        </div>
        <div class="col-md-6 text-right">
          <%= link_to 'New Employee', new_employee_path, class: 'btn btn-primary' %>
        </div>
      </div>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Manager</th>
            <th>Company</th>
            <th colspan="3" width="20%">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @employees.each do |employee| %>
            <tr>
              <td><%= employee.name %></td>
              <td><%= employee.email %></td>
              <td><%= employee.phone %></td>
              <td><%= employee.parent.email if employee.parent %></td>
              <td><%= employee.company.name %></td>
              <td><%= link_to 'Show', employee %></td>
              <td><%= link_to 'Edit', edit_employee_path(employee), id: "edit_#{employee.id}" %></td>
              <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
